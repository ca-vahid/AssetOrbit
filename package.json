{
  "name": "assetorbit",
  "private": true,
  "version": "0.94.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm run dev --prefix packages/backend",
    "dev:frontend": "npm run dev --prefix packages/frontend",
    "build": "npm run build --workspace=@ats/shared-transformations && npm run build --workspace=@ats/backend && npm run build --workspace=@ats/frontend",
    "lint": "eslint \"**/*.{ts,tsx}\" --max-warnings=0",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md,css,html}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.4.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "npm run lint",
      "npm run format"
    ]
  }
}
